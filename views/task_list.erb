<!doctype html>
<html>
  <head>
    <title>Task list</title>
    <link rel="stylesheet" href="css/jquery.mobile-1.0a3.min.css" />
    <script src="js/jquery-1.5.1.min.js" type="text/javascript" charset="utf-8"></script>
    <script src="js/jquery.mobile-1.0a3.min.js" type="application/x-javascript" charset="utf-8"></script>
    
  </head>
  <body data-role="page" id="demolist">
    <div data-role="header">
      <h1>Task List</h1>
    </div>

    <div data-role="content" class="ui-content" role="main">
      <ul data-role="listview" class="ui-listview" role="listbox">
        <% @lines.each do |line| %>
          <% unless line.isAnnotation %>
            <li role="option>" data-theme="c" class="ui-btn ui-btn-icon-right ui-li ui-btn-up-c">
              <div class="ui-btn-text">
                <p class="ui-li-aside ui-li-desc"><%= "<strong>#{line.columns[7]} left</strong>" unless line.columns[7].empty? %></p>
                <h3 class="ui-li-heading"><%= line.columns[11] %></h3>
                <p class="ui-li-desc"><%= "Project: <strong>#{line.columns[1]}</strong>" unless line.columns[1].empty? %></p>
              </div>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </body>
</html>
